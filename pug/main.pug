include common/_mixins
include common/_settings
block variables

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        meta(content="width=device-width, initial-scale=1" name="viewport")

        title Portfolio | #{title}
        link(rel='stylesheet' href='css/vendor.min.css')
        link(rel='stylesheet' href='css/main.css')
        // Для изменений после верстки
        link(rel='stylesheet' href='css/custom.css')

        link(rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png")
        link(rel="manifest" href="images/favicon/site.webmanifest")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
    body
        .wrapper
            //- heeader
            header(class=main ? 'header_absolute' : '').header
                .container
                    .header__left
                        button(type='button').header__btn-aside.jsMenuOpen
                            +icon('menu','')
                        .header__logo
                            if main
                                +image('images/icons/logo.svg','header__logo-img')
                            else
                                +image('images/icons/logo-black.svg','header__logo-img')
                    .header__nav
                        .nav
                            each i in nav
                                a(href=i.href).nav__item= i.title
                    .header__controls
                        a(href='/').header__control
                            +icon('basket', 'header__control-svg header__control-svg_basket')
                            span.header__control-count 1
                        a(href='/').header__control
                            +icon('cabinet', 'header__control-svg header__control-svg_cabinet')
                        a(href='/').header__control
                            +icon('loop', 'header__control-svg header__control-svg_loop')
                    .header__contacts
                        a(href='tel:+7(495)369-53-75').header__tel +7 (495) 369-53-75
                        button(type='button').btn.header__btn.jsCall заказать звонок


            //- aside
            aside.aside
                .aside__top
                    button(type='button').aside__close.jSMenuClose
                        +icon('arrow-l','aside__close-svg')
                    a(href='/').aside__logo
                        +image('images/icons/logo.svg','aside__logo-img')

                .aside__middle
                    .aside__list
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt ТЕКСТИЛЬНЫЕ ЛАЙТБОКСЫ
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu('menu_g')
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt ФРЕЙМЛАЙТЫ
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt ПАНЕЛИ МАГНЕТИК
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt КРИСТАЛАЙТЫ
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt ИЗДЕЛИЯ ИЗ КОЖИ
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt СУВЕНИРЫ
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()
                        .aside__item
                            a(href='/').aside__link.aside__link_arr
                                span.aside__link-txt ПОДАРОЧНАЯ КОРОБКА
                                +icon('arr-r', 'aside__link-svg')
                            .aside__item-menu
                                +menu()



                    .aside__nav
                        each i in nav
                            a(href=i.href).aside__nitem= i.title

                .aside__contacts
                    a(href='https://yandex.ru/maps/-/CKqo7XM~').aside__contact Адрес: г. Москва, ул. Ярославская, д. 8, корп. 6
                    a(href='tel:+7(495)369-53-75').aside__contact +7 (495) 369-53-75
                    a(href='mailto:info@magstor.ru').aside__contact info@magstor.ru

            //- pages
            main.page
                block content

            //- footer
            footer.footer
                .container
                    //-top
                    .footer__top
                        .row
                            .footer__top-left
                                a(href='/').footer__logo
                                    +image('images/icons/logo.svg','footer__logo-img')

                            .footer__top-center
                                .footer__txt Оставьте заявку на обратный звонок и получите бесплатную консультацию от наших специалистов

                            .footer__top-right
                                button(type='button').btn.footer__btn.jsCall заказать звонок


                    //- middle
                    .footer__middle
                        .row
                            .footer__col
                                .footer__list
                                    a(href='/').footer__item.footer__item_w О нас
                                    a(href='/').footer__item.footer__item_w Оплата и доставка
                                    a(href='/').footer__item.footer__item_w наши проекты
                                    a(href='/').footer__item.footer__item_w каталог
                                    a(href='/').footer__item.footer__item_w Контакты
                            .footer__col
                                .footer__list
                                    a(href='/').footer__item ТЕКСТИЛЬНЫЕ ЛАЙТБОКСЫ
                                    a(href='/').footer__item ФРЕЙМЛАЙТЫ
                                    a(href='/').footer__item ПАНЕЛИ МАГНЕТИК
                                    a(href='/').footer__item КРИСТАЛАЙТЫ
                            .footer__col
                                .footer__list
                                    a(href='/').footer__item ИЗДЕЛИЯ ИЗ КОЖИ
                                    a(href='/').footer__item СУВЕНИРЫ
                                    a(href='/').footer__item ПОДАРОЧНАЯ КОРОБКА
                            .footer__col
                                .footer__contacts
                                    a(href='https://yandex.ru/maps/-/CKqo7XM~').footer__contact Адрес: г. Москва, ул. Ярославская, д. 8, корп. 6
                                    a(href='tel:+7(495)369-53-75').footer__contact +7 (495) 369-53-75
                                    a(href='mailto:info@magstor.ru').footer__contact info@magstor.ru
                                .footer__socials
                                    .socials
                                        a(href='/').social
                                            +icon('vk','social__svg')
                                        a(href='/').social
                                            +icon('fb','social__svg')
                                        a(href='/').social
                                            +icon('inst','social__svg')
                                        a(href='/').social
                                            +icon('fb','social__svg')



                //- bottom
                .footer__bottom
                    .container
                        .footer__copy © 2020 MagStor – производство интерьерной рекламы в Москве

                        .footer__policy Политика конфиденциальности

                        a(href='/').footer__vendor
                            span.footer__vendor-txt Cоздание и продвижение сайтов
                            +image('images/icons/vebdor.png', 'footer__vendor-img')




